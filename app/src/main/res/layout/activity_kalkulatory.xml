<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="pl.wat.wel.projekt.pumo.electronicband.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/prosty_k"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/prosty"
            android:drawableStart="@mipmap/ic_launcher_round"
            android:textAlignment="textStart"
            android:background="@drawable/button_kalkulatorki"
            style="@style/button_text"/>
        <Button
            android:id="@+id/bramki_k"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bramki_logiczne"
            android:drawableStart="@mipmap/ic_launcher_round"
            android:textAlignment="textStart"
            android:background="@drawable/button_kalkulatorki"
            style="@style/button_text"/>

        <!-- shows submenu -->

        <LinearLayout
            android:id="@+id/logic_submenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <Button
                android:id="@+id/gate_not"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:onClick="onClickNOT"
                android:text="NOT"/>
            <Button
                android:id="@+id/gate_and"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:onClick="onClickAND"
                android:text="AND"/>
            <Button
                android:id="@+id/gate_nand"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:onClick="onClickNAND"
                android:text="NAND"/>
            <Button
                android:id="@+id/gate_or"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:onClick="onClickOR"
                android:text="OR"/>
            <Button
                android:id="@+id/gate_nor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:onClick="onClickNOR"
                android:text="NOR"/>
            <Button
                android:id="@+id/gate_xor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:onClick="onClickXOR"
                android:text="XOR"/>



        </LinearLayout>

        <Button
            android:id="@+id/opisy_k"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/descriptions"
            android:drawableStart="@mipmap/ic_launcher_round"
            android:textAlignment="textStart"
            android:background="@drawable/button_kalkulatorki"
            style="@style/button_text"/>

    </LinearLayout>


</LinearLayout>
