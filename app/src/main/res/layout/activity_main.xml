<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.wat.wel.projekt.pumo.electronicband.Activities.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/theoryView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorTheory"
            android:drawableStart="@drawable/icon_theory"
            android:gravity="center"
            android:paddingStart="20dp"
            android:text="@string/theory"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/calculatorsView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#4551ff"
            android:drawableStart="@drawable/calculator"
            android:gravity="center"
            android:paddingStart="20dp"
            android:text="@string/calculators"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/coursesView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#ac61f7"
            android:drawableStart="@drawable/courses_icon"
            android:gravity="center"
            android:paddingStart="20dp"
            android:text="@string/kursy"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorBackgroundEditor">

            <TextView
                android:id="@+id/schemaEditorView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawableStart="@drawable/schematic_icon"
                android:gravity="center"
                android:paddingStart="20dp"
                android:text="@string/edytor_schemat_w"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:text="BETA"
                android:textColor="#FF0000"
                android:textStyle="italic|bold" />
        </RelativeLayout>

        <TextView
            android:id="@+id/aboutUsView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#f25355"
            android:drawableStart="@drawable/dictionary_icon"
            android:gravity="center"
            android:paddingStart="20dp"
            android:text="@string/about_us"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>


</LinearLayout>
